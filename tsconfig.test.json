{
  "compilerOptions": {
    "preserveSymlinks": true,
    "target": "ES2020",
    "lib": ["ESNext"],
    "module": "ES2022",
    "moduleResolution": "node",
    "types": ["bun-types"],
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["test/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
